{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "rules": {
            "no-unused-vars": "error", // Disallow unused variables
            "eqeqeq": "error", // Require the use of === and !==
            "no-console": "warn", // Disallow console statements (you can adjust severity as needed)
            "no-restricted-globals": [
                "error",
                "isNaN"
            ], // Disallow specific global variables like isNaN
            "no-redeclare": "error", // Disallow variable redeclaration
            "indent": [
                "error",
                2
            ], // Enforce consistent indentation (2 spaces)
            "semi": [
                "error",
                "always"
            ], // Require semicolons at the end of statements
            "quotes": [
                "error",
                "single"
            ], // Enforce the use of single quotes
            "comma-dangle": [
                "error",
                "never"
            ], // Disallow trailing commas in object literals
            "no-trailing-spaces": "error", // Disallow trailing spaces
            "no-multiple-empty-lines": [
                "error",
                {
                    "max": 1
                }
            ] // Disallow multiple empty lines with a maximum of one
        }
    }
}